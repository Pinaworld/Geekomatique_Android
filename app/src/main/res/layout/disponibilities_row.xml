<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/appointmentRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@null"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dispoDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Lundi"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dispoStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="18:00:00"
            android:textStyle="bold"
            android:fontFamily="serif"/>

        <TextView
            android:id="@+id/dispoEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="20:00:00"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/deleteDispBtn"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="right"
            android:background="@color/colorAccent"
            android:fontFamily="serif"
            android:text="@string/suppr_presta"
            android:textSize="10dp"
            android:textStyle="italic" />


    </LinearLayout>

</android.support.v7.widget.CardView>