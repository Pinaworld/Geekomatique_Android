        app:layout_constraintTop_toBottomOf="@+id/LastDay"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/AText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/Ã "
        app:layout_constraintBottom_toTopOf="@+id/ValidateDispo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AuText"
        app:layout_constraintVertical_bias="0.44" />

    <Button
        android:id="@+id/ValidateDispo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="229dp"
        android:onClick="ReturnHomeAtivity"
        android:text="@string/validate_butt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstHour" />
</android.support.constraint.ConstraintLayout>